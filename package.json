{
  "name": "starter",
  "version": "1.0.0",
  "description": "starter app",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "concurrently \"npm run client:dev\" \"npm run server:dev\"",
    "simprod": "concurrently \"npm run client:prod\" \"npm run server:prod\"",
    "prod": "concurrently \"npm run client:prod\" \"npm run server:prod\"",
    "client:dev": "webpack-dev-server --config client/config/webpack.dev.js --inline --progress",
    "client:prod": "webpack --config client/config/webpack.prod.js --progress --profile --bail",
    "preserver:build:dev": "npm run clean",
    "server:build:dev": "tsc -p server && mkdir dist/server/config && cp server/config/.env.dev dist/server/config/.env",
    "preserver:build:sim-prod": "npm run clean",
    "server:build:sim-prod": "tsc -p server && mkdir dist/server/config && cp server/config/.env.prod dist/server/config/.env",
    "preserver:build:prod": "npm run clean",
    "server:build:prod": "tsc -p server && mkdir dist/server/config && cp server/config/.env.prod dist/server/config/.env",
    "run:server:dev": "nodemon --ext ts --watch server node dist/server/bin/www.js",
    "run:server:prod": "node dist/server/bin/www.js",
    "server:dev": "tsc -p server && concurrently \"tsc -p -w server\" \"nodemon --ext ts --watch server node dist/server/bin/www.js\""
    "webpack-dev-server --config client/config/webpack.dev.js --inline --progress" &&
  },
  "license": "MIT",
  "dependencies": {
    "@angular/common": "^2.2.3",
    "@angular/compiler": "^2.2.3",
    "@angular/core": "^2.2.3",
    "@angular/forms": "^2.2.3",
    "@angular/http": "^2.2.3",
    "@angular/platform-browser": "^2.2.3",
    "@angular/platform-browser-dynamic": "^2.2.3",
    "@angular/router": "^3.2.3",
    "body-parser": "^1.15.2",
    "core-js": "^2.4.1",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "mongoose": "^4.7.0",
    "morgan": "^1.7.0",
    "rxjs": "^5.0.0-beta.12",
    "serve-favicon": "^2.3.2",
    "zone.js": "^0.6.26"
  },
  "devDependencies": {
    "@types/body-parser": "0.0.33",
    "@types/core-js": "^0.9.34",
    "@types/dotenv": "^2.0.19",
    "@types/express": "^4.0.34",
    "@types/mongoose": "^4.6.1",
    "@types/morgan": "^1.7.32",
    "@types/node": "^6.0.51",
    "@types/serve-favicon": "^2.2.28",
    "angular2-router-loader": "^0.3.4",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.0-beta.9",
    "cash-cp": "^0.2.0",
    "cash-mkdir": "^0.2.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.24.1",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "postcss-loader": "^1.1.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "typescript": "^2.0.10",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2",
    "webpack-merge": "^0.19.0"
  }
}
